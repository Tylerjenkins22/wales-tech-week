@using Umbraco.Cms.Web.Common
@inherits UmbracoViewPage
@{
    var current = UmbracoContext.PublishedRequest.PublishedContent.Children.Where(x => x.ContentType.Alias == ChallengePage.ModelTypeAlias);
    var test = current;
}
<!-- Main Content-->
<div class="container px-4 px-lg-5" style="padding-left: 0px !important;">
<div class="row gx-4 gx-lg-5 justify-content-center" style="min-width:1500px">
    <div class="col-md-10 col-lg-8 col-xl-7" style="display: flex;flex-flow: wrap; width: 100%;">
        @foreach (var page in current)
        {
            var challenges = page as ChallengePage;
                 <div class="post-preview" style="border: 10px solid @challenges.Colour;
                                                  border-radius: 50px;
                                                  padding: 25px; flex: 1; max-width: 315px; margin: 10px 10px 0px 10px; min-width: 300px;box-shadow: inset 2px 2px 4px rgba(0, 0, 0, 0.4);
                                                  text-align: center;">
                    <a href="@challenges.Url()" target="_blank">
                        <h2 class="post-title">@challenges.Title</h2>
                        <h3 class="post-subtitle">@challenges.Subtitle</h3>
                    </a>
                 </div>
        }
    </div>
</div>
</div>